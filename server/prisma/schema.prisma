generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model sale {
  saleId      String  @id @map("_saleId") @db.Char(5)
  productName String? @map("_productName") @db.VarChar(20)
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}